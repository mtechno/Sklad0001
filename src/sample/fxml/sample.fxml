<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controllers.Controller">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Склад">
                            <items>
                                <MenuItem fx:id="menuAllProducts" mnemonicParsing="false"
                                          onAction="#menuAllProductsSelect" text="Товары в наличии"/>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Редактирование">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Создать"/>
                                <MenuItem mnemonicParsing="false" text="Изменить"/>
                                <MenuItem mnemonicParsing="false" text="Удалить"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Помощь">
                            <items>
                                <MenuItem mnemonicParsing="false" text="О программе"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox spacing="8.0">
                    <children>
                        <TextField fx:id="logTextField">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="but1" mnemonicParsing="false" onAction="#clickLogIn" text="Ok"/>
                        <Separator orientation="VERTICAL"/>
                        <Button fx:id="butAddProd" mnemonicParsing="false" onAction="#clickBtn" text="New">
                            <graphic>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#21f83a" height="10.0" stroke="BLACK"
                                           strokeType="INSIDE" width="10.0"/>
                            </graphic>
                        </Button>
                        <Button fx:id="butUpProd" mnemonicParsing="false" onAction="#clickBtn" text="Edit">
                            <graphic>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="10.0" stroke="BLACK"
                                           strokeType="INSIDE" width="10.0"/>
                            </graphic>
                        </Button>
                        <Button fx:id="butDelProd" mnemonicParsing="false" onAction="#clickBtn" text="Delete">
                            <graphic>
                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ff1e1e" height="10.0" stroke="BLACK"
                                           strokeType="INSIDE" width="10.0"/>
                            </graphic>
                        </Button>
                        <Separator layoutX="198.0" layoutY="18.0" orientation="VERTICAL"/>
                        <Button mnemonicParsing="false" onAction="#clickBtnRefresh">
                            <graphic>
                                <ImageView fitHeight="12.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/refresh.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
