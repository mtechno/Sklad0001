                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelWelcome"/>
                <Label fx:id="labelCountProducts" text="Количество Товаров: 0"/>
